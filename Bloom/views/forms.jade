extends layout

block content
  h1.ptn-title= title
  //- h2.ptn-subtitle Need to come back to this!!!!!

  div.section.group
    div.col.span_2_of_3
      form
        fieldset
          legend User Information
          input(type='text', placeholder='Input Text')
          input(type='text', disabled='disabled', placeholder='Disabled Input')
          input(type='text', class='input-error', placeholder='Error Input')
          input(type='text', class='input-success', placeholder='Success Input')
          textarea(placeholder='Textarea Text' rows='6')
        fieldset
          legend Select
          select
            option(value='') Select an option
            option(value='1') Value 1
            option(value='2') Value 2
            option(value='3') Value 3
            option(value='4') Value 4
            option(value='5') Value 5
        fieldset
          legend Checkbox
          label
            input(type='checkbox')
            span Value 1
            input(type='checkbox')
            span Value 2
        fieldset
          legend Radio Button
          label
            input(name='radio-example', type='radio')
            span Value 1
          label
            input(name='radio-example', type='radio')
            span Value 2
        button.sm-primary.square.form-btn Submit
    div.col.span_1_of_3.notes
      h2 Notes
      p This is a sentence. This is a sentence. This is a sentence. This is a sentence.
    div.section.group
      div.col.span_3_of_3.code
        p Code
